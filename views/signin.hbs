<form class='form' action="/authentication/signin" method="POST">
  <label class='label' for="input-email">Email</label>
  <input class='input' type="email" id="input-email" name="email" placeholder="Your Email" />
  
  <label class='label' for="input-password">Password</label>
  <input class='input' type="password" name="password" id="input-password" placeholder="Your Password" />
  
  <button class='sign'>Sign In</button>
</form>

