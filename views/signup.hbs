<form action="/authentication/signup" method="POST">
  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" placeholder="Your Name" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" />

  <label for="input-type">Type</label>
  <input required type="text" id="input-type" name="type" placeholder="Are you a [Pet Owner] or a [Petsitter]?" />
  <p>What kind of user are you?</p>
  <select name="type" id="type-input">
    <option value="Coffee Shop">Pet Owner</option>
    <option value="Bookstore">Petsitter</option>
  </select>

  <label for="input-location">Location</label>
  <input type="text" id="input-location" name="location" placeholder="Where are you at?" />

  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" />

  <button>Sign Up</button>
</form>

