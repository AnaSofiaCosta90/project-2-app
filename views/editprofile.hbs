<form action="" method="POST">
  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" value="{{user.name}}" placeholder="Your Name" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" value="{{user.email}}" placeholder="Your Email" />

  <label for="input-type">Type</label>
  <input type="text" id="input-type" name="type" value="{{user.type}}" />

  <label for="input-location">Location</label>
  <input type="text" id="input-location" name="location" value="{{user.location}}" placeholder="Where are you at?" />

  <button>Submit Changes</button>
</form>

